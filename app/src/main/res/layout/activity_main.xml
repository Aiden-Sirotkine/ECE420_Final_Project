<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.ece420.lab4.MainActivity">

    <Button
        android:id="@+id/load_file_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Audio File"
        android:onClick="loadFileClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/resample_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Up"
        android:onClick="resampleClick"
        android:layout_below="@id/load_file_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/crop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resample_button"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:onClick="REPETVocalClick"
        android:text="Crop" />

    <Button
        android:id="@+id/mix_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crop_button"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:onClick="REPETVocalClick"
        android:text="Mix" />

    <Button
        android:id="@+id/repet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:onClick="REPETClick"
        android:text="repet" />

    <Button
        android:id="@+id/repet_vocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repet"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:onClick="REPETVocalClick"
        android:text="repet vocal" />

    <Button
        android:id="@+id/repet_instrumental_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repet_vocal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:onClick="REPETInstrumentalClick"
        android:text="repet instrumental" />

    <Button
        android:id="@+id/pitch_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repet_instrumental_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:onClick="pitchUpClick"
        android:text="pitch up" />

    <TextView android:text="@string/init_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="3"
        android:id="@+id/statusView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

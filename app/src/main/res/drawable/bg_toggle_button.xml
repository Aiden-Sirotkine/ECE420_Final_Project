<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#7C3AED" /> <!-- Primary Purple -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#A78BFA" />
        </shape>
    </item>
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#5B21B6" /> <!-- Darker Purple -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2A2A2A" /> <!-- Dark Surface -->
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#4A4A4A" /> <!-- Subtle Border -->
        </shape>
    </item>
</selector>
